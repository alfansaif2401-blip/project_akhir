-- Create Indexes for Better Performance
CREATE INDEX idx_item_code ON inventory_items(item_code);
CREATE INDEX idx_category ON inventory_items(category_id);
CREATE INDEX idx_status ON inventory_items(status);
CREATE INDEX idx_transaction_date ON stock_transactions(transaction_date);
CREATE INDEX idx_user_role ON users(role);
